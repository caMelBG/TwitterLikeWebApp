@model PagedList.IPagedList<UserViewModel>

@section styles {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/User/index.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Ajax.BeginForm("GetUsersBySearchQuery", "User", new AjaxOptions
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "container-users"
            }))
            {
            <input type="text" name="query" />
            <input type="submit" class="btn btn-default" value="Find" />
        }
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3" id="container-users">
        @Html.Action("GetUsersBySearchQuery")
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryajax")
}