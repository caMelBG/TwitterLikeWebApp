@model CreateTweetViewModel

@section styles {
    <link href="~/Content/Tweet/create.css" rel="stylesheet" />
}

@using (Html.BeginForm("Create", "Tweet", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3>What's happening?</h3>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.TextAreaFor(m => m.Content, new { @class = "tweet-content" })
                <input type="submit" class="btn btn-default pull-right" value="Tweet" />
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
