@section styles {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Tweet/index.css" rel="stylesheet" />
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <input type="submit" class="btn btn-info btn-post-new-tweet" value="Post New Tweet" />
        </div>
    </div>
}

<div class="container" id="tweet-list-container">
    @Html.Action("ListTweets", "Tweet")
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryajax");
}